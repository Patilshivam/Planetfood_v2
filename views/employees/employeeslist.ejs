<%- include('../partials/header') %> 

<div class="container">
    <table class="table table-striped">
        <thead>
          <tr>
            <th>Employee Image</th> 
            <th>Employee Id</th> 
            <th>Employee Name</th>
            <th>Employee Job</th>
            <th>Employee Salary ( <i class="fa fa-rupee"></i> )</th>
            <th>Edit-OP</th>
            <th>Delete-OP</th>
            <th>View-OP</th>
          </tr>
        </thead>
        <tbody>
            <% employees.forEach(employee => { %> 
                <tr>
                  <td><img width="100" height="60" alt="" src="<%= employee.image %>" data-holder-rendered="true"></td>
                    <td><%= employee.employeeId %> </td>
                    <td><%= employee.employeeName %> </td>
                    <td><%= employee.job %> </td>
                    <td><i class="fa fa-rupee"></i> <%= employee.salary %> </td>
                    <td><a href="/employees/<%= employee._id %>/edit">Edit</a></td>
                    <td><a href="/employees/<%= employee._id %>">Delete</a></td>
                    <td><a href="/employees/<%= employee._id %>/view">View</a></td>
                  </tr>
             <% }); %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>   