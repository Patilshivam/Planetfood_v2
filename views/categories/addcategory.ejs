<%- include('../partials/header') %> 

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 10px auto;">
            <div style="padding: 10px;">
                <h2 style="margin: 10px auto;"><span class="glyphicon glyphicon-plus"></span> Add Category</h2>
            </div> 
            <form action="/categories/addcategory" method="POST">
                Enter Category Id : 
                <div class="form-group">
                    <input class="form-control" type="text" name="categories[catId]">
                </div>
                Enter Category Name :
                <div class="form-group">
                    <input class="form-control" type="text" name="categories[catName]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add Category</button>
                </div>
            </form>
        </div>
    </div>
</div>

