<%- include('../partials/header') %> 

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 10px auto;">
            <div style="padding: 10px;">
                <h3 style="margin: 10px auto;"><span class="glyphicon glyphicon-plus"></span> Add Product To Basket</h3>
            </div>
            <form action="/orders/placeorder" method="POST">
                <label for="select category">Select category</label> 
                <div class="form-group"> 
                    <select class="form-control" name="selectedProductId">
                        <% products.forEach(product => { %>
                            <option value="<%= product._id %>"><%= product.productName %></option>
                        <% }); %>
                    </select>
                </div>
                <label for="quantity">Quantity</label>    
                <div class="form-group">
                    <input class="form-control" type="number" name="quantity" min="1" max="100">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add Product</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 
