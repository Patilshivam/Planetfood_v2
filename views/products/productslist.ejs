<%- include('../partials/header') %> 

<div class="container">
    <table class="table table-striped">
        <thead>
          <tr>
            <th>Product Image</th>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Product Price ( <i class="fa fa-rupee"></i> )</th>
            <th>Product Active</th>
            <th>Product Category Id</th>
            <th>Edit-OP</th>
            <th>Delete-OP</th>
            <th>View-OP</th>
          </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %> 
                <tr>
                    <td><img width="100" height="60" alt="" src="<%= product.image %>" data-holder-rendered="true"></td>
                    <td><%= product.productId %> </td>
                    <td><%= product.productName %> </td>
                    <td><i class="fa fa-rupee"></i> <%= product.productPrice %> </td>
                    <td><%= product.active %> </td>
                    <td><%= product.category %> </td>
                    <td><a href="/products/<%= product._id %>/edit">Edit</a></td>
                    <td><a href="/products/<%= product._id %>">Delete</a></td>
                    <td><a href="/products/<%= product._id %>/view">View</a></td>
                </tr>
             <% }); %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>   

